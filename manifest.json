{
  "manifest_version": 3,
  "name": "Background Color Changer",
  "version": "1.0",
  "description": "ウェブページの背景色を変更するChrome拡張機能",

  "permissions": ["activeTab"],

  "action": {
    "default_popup": "popup.html",
    "default_title": "背景色を変更"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
